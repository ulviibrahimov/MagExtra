<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >
    	

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/next" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/prevbutton"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_toLeftOf="@+id/nextbutton"
        android:layout_toRightOf="@+id/prevbutton"
        android:ems="10" />

    

    <Button
        android:id="@+id/bbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cbutton"
        android:layout_alignLeft="@+id/abutton"
        android:layout_alignRight="@+id/abutton"
        android:textSize="10sp" />

    <Button
        android:id="@+id/cbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dbutton"
        android:layout_alignLeft="@+id/bbutton"
        android:layout_alignRight="@+id/bbutton"
        android:textSize="10sp" />

    <Button
        android:id="@+id/dbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ebutton"
        android:layout_alignLeft="@+id/cbutton"
        android:layout_alignRight="@+id/cbutton"
        android:textSize="10sp" />

    <Button
        android:id="@+id/abutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bbutton"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:textSize="10sp" />

    <Button
        android:id="@+id/ebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/dbutton"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/abutton"
        android:layout_alignLeft="@+id/abutton"
        android:layout_gravity="center"
        android:text="This is the body "
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/prevbutton"
        android:layout_alignRight="@+id/nextbutton"
        android:layout_below="@+id/prevbutton"
    	android:adjustViewBounds="true"
        android:src="@drawable/kainat"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/prevbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/prev" />
    
   

</RelativeLayout>